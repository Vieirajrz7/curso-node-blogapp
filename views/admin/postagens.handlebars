<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <small>Data: {{date}}</small> <br>
        <a href="/admin/postagem/edit/{{_id}}"><button class="btn btn-secondary mt-3">Editar Postagem</button></a> <br>

        <form action="/admin/postagem/delete/{{_id}}" method="POST">
        <input type="hidden" value="{{_id}}" name="id">
        <a href="/admin/postagem/delete/{{_id}}"><button class="btn btn-danger mt-2">Deletar Postagem</button></a>
        </form>
    </div>
</div>
{{else}}
<h4 class="mt-4" style="color: #ccc;">Nenhuma Postagem criada At√© o Momento...</h4>
{{/each}}